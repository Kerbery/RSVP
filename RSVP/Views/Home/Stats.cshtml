            <thead>
                <tr>
                    <th scope="col">Will Attend</th>
                    <th scope="col">Won't Attend</th>
                    <th scope="col">May Attend</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.WillAttend</td>
                    <td>@Model.WontAttend</td>
                    <td>@Model.MayAttend</td>
                </tr>
            </tbody>
        </table>
    </div>
